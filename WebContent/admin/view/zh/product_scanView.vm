<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-sm-9">
            <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>商品信息</h5>
                    </div>
                    <div class="ibox-content">
                        <div method="get" class="form-horizontal">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="carousel slide" id="carousel2">
                                        <ol class="carousel-indicators">
                                        	#foreach($ele in $products.banner)
                                        		#if ($products.banner.indexOf($ele) == 0)
		                                            <li data-slide-to="0" data-target="#carousel2" class="active"></li>
                                        		#else 
		                                            <li data-slide-to="$products.banner.indexOf($ele)" data-target="#carousel2"></li>
                                        		#end
                                        	#end
                                        </ol>
                                        <div class="carousel-inner">
                                        	#foreach($ele in $products.banner)
                                        		#if ($products.banner.indexOf($ele) == 0)
	                                            	<div class="item active">
	                                            #else
	                                            	<div class="item">
	                                            #end
	                                                <img alt="image" class="img-responsive" src="$!app/$!ele">
	                                                <div class="carousel-caption">
	                                                    <p>$!products.name</p>
	                                                </div>
	                                            </div>
                                            #end
                                        </div>
                                        <a data-slide="prev" href="carousel.html#carousel2" class="left carousel-control">
                                            <span class="icon-prev"></span>
                                        </a>
                                        <a data-slide="next" href="carousel.html#carousel2" class="right carousel-control">
                                            <span class="icon-next"></span>
                                        </a>
                                    </div>
                                </div>


                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">商品名：</label>
                                        <div class="col-sm-9 form-control-static">$!products.name</div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">商品标题：</label>
                                        <div class="col-sm-9 form-control-static">$!products.title</div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">商品分类：</label>
                                        <div class="col-sm-9 form-control-static">$!products.classify_name</div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">商品品牌：</label>
                                        <div class="col-sm-9 form-control-static">$!products.brand_name</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>商品价格</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-sm-10">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">币种名称：</label>
                                        <div class="col-sm-3 form-control-static">$!products.currency_name</div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">商品原价：</label>
                                        <div class="col-sm-3 form-control-static">$!products.price</div>
                                        <label class="col-sm-3 control-label">币种汇率：</label>
                                        <div class="col-sm-3">
                                            <div class="input-group form-control-static">$!products.currency_rate</div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">商品折扣：</label>
                                        <div class="col-sm-3 form-control-static">0.976</div>
                                        <label class="col-sm-3 control-label">商品库存：</label>
                                        <div class="col-sm-3 form-control-static">100</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>商家价格</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-sm-10">
                                	#foreach ($ele in $products.shops)
	                                    <div class="form-group">
	                                        <label class="col-sm-3 control-label">商家：</label>
	                                        <div class="col-sm-3 form-control-static">$!ele.name</div>
	                                    </div>
	                                    <div class="form-group">
	                                        <label class="col-sm-3 control-label">地址：</label>
	                                        <div class="col-sm-9">
	                                            <div class="input-group form-control-static">$!ele.address</div>
	                                        </div>
	                                    </div>
	                                    <div class="form-group">
	                                        <label class="col-sm-3 control-label">售价：</label>
	                                        <div class="col-sm-3 form-control-static">$!ele.money</div>
	                                    </div>
	                                    <div class="form-group">
	                                        <label class="col-sm-3 control-label">折扣：</label>
	                                        <div class="col-sm-3 form-control-static">$!ele.discount_money</div>
	                                    </div>
	                                    <div class="form-group">
	                                        <label class="col-sm-3 control-label">备注：</label>
	                                        <div class="col-sm-3 form-control-static">$!ele.information</div>
	                                    </div>
	                                    #if ($products.shops.indexOf($ele) < ($products.shops.size() - 1))
	                                    	<div class="hr-line-dashed"></div>
	                                    #end
                                    #end
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>节假日</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-sm-10">
	                            	#foreach ($ele in $products.festivals)
	                                    <div class="form-group">
	                                        <label class="col-sm-3 control-label">节假日：</label>
	                                        <div class="col-sm-6 form-control-static">$!ele.name</div>
	                                    </div>
	                                    <div class="form-group">
	                                        <label class="col-sm-3 control-label">促销金额：</label>
	                                        <div class="col-sm-3 form-control-static">$!ele.discount_money</div>
	                                    </div>
	                                    <div class="form-group">
	                                        <label class="col-sm-3 control-label">促销折扣：</label>
	                                        <div class="col-sm-3 form-control-static">$!ele.discount</div>
	                                    </div>
	                                    <div class="form-group">
	                                        <label class="col-sm-3 control-label">促销信息：</label>
	                                        <div class="col-sm-9 form-control-static">$!ele.information</div>
	                                    </div>
                                    #end
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>标签</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-sm-10">
                                    <div class="form-group">
                                        <div class="col-sm-10 col-sm-offset-1">
                                        	#foreach ($ele in $products.labels)
                                            	<label class="checkbox-inline">$ele</label>
                                            #end
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>其他信息</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-sm-10">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">推荐商品：</label>
                                       	#if($products.is_recommand == true)
                                        	<div class="col-sm-3 form-control-static">是</div>
                                        #else
                                        	<div class="col-sm-3 form-control-static">否</div>
                                        #end
                                        
                                        #if ($products.recommand_level == true)
	                                        <label class="col-sm-3 control-label">推荐级别：</label>
	                                        <div class="col-sm-3 form-control-static">$!products.recommand_level</div>
                                        #end
                                    </div>
	                                    <div class="form-group">
	                                        <label class="col-sm-3 control-label">删除：</label>
                                    		#if ($products.is_del == true)
	                                        	<div class="col-sm-9 form-control-static">是</div>
	                                        #else
	                                        	<div class="col-sm-9 form-control-static">否</div>
		                                    #end
	                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">禁用：</label>
                                        #if ($products.is_del == true)
                                        	<div class="col-sm-9 form-control-static">是</div>
                                        #else
                                        	<div class="col-sm-9 form-control-static">否</div>
                                        #end
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>商品详情</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-sm-10 col-sm-offset-1">$products.description</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            </div>
            </div>

            <div class="col-sm-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>温馨提示</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="form-horizontal">
                            <p>时间：2016-08-14 17:25:00</p>
                            <div class="form-group">
                                <label class="col-sm-6 control-label">港币汇率：</label>
                                <div class="col-sm-6">
                                    <span class="help-block m-b-none">0.857</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-6 control-label">港币汇率：</label>
                                <div class="col-sm-6">
                                    <span class="help-block m-b-none">0.857</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="$!js/jquery.min.js?v=2.1.4"></script>
    <script src="$!js/bootstrap.min.js?v=3.3.6"></script>
