<body class="gray-bg">
	<link href="$!css/plugins/iCheck/custom.css" rel="stylesheet">
	<link href="$!css/plugins/dataTables/dataTables.bootstrap.css?v=1.0" rel="stylesheet">
	<link href="$!css/plugins/dataTables/select.dataTables.css?v=1.0" rel="stylesheet">
	<link href="$!css/plugins/dataTables/buttons.dataTables.css?v=1.0" rel="stylesheet">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>商品类别</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="">
                            <a id="product_classify_add" class="btn btn-primary">添加</a>
                            <a id="product_classify_edit" class="btn btn-success">修改</a>
                            <a id="product_classify_delete" class="btn btn-warning">删除</a>
                            <a id="product_classify_refresh" class="btn btn-primary fa fa-refresh"></a>
                        </div>
                        <table id="product_classify_table" class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                	<th></th>
                                	<th>ID</th>
                                    <th>分类</th>
                                    <th>详情</th>
                                    <th>添加时间</th>
                                    <th>禁用</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div id="modal-form" class="modal fade" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">新增</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6 b-r">
                        <form id="product_classify_form" role="form">
                            <div class="form-group">
                                <label>分类：</label>
                                <input name="name" type="text" class="form-control">
                                <input name="classify_id" type="hidden" value="">
                            </div>
                            <div class="form-group">
                                <label>信息：</label>
                                <textarea name="intro" type="text" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <label>禁用：</label>
                                <label class="i-checks">
                                    <label class="checkbox-inline">
                                        <input name="is_forbidden" value="true" type="checkbox"/>是
                                    </label>
                                </label>
                            </div>
                            <div>
                                <button id="product_classify_form_btn" class="btn btn-sm btn-primary pull-right m-t-n-xs" type="button">
                                	<strong>添加</strong>
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="col-sm-6">
                        <h4>温馨提示：</h4>
                        <p>请填入分类信息，以后查用方便</p>
                        <p class="text-center">
                            <i class="fa fa-sign-in big-icon"></i>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="$!js/plugins/dataTables/jquery.dataTables.js?v=1.0"></script>
    <script src="$!js/plugins/dataTables/dataTables.bootstrap.js?v=1.0"></script>
    <script src="$!js/plugins/dataTables/dataTables.select.js?v=1.0"></script>
    <script src="$!js/plugins/dataTables/dataTables.buttons.js?v=1.0"></script>
    <script src="$!js/plugins/jeditable/jquery.jeditable.js"></script>
    <script src="$!js/plugins/iCheck/icheck.min.js"></script>
    
    <script src="$!vjs/productClassify_manageView.js"></script>
</body>